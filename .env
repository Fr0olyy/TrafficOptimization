# ============================================
# Quantum Traffic Optimizer - Configuration
# ============================================

# Server
PORT=9000
WEB_DIR=/app/web

# MIREA Quantum Platform
MIREA_EMAIL=your-email@example.com
MIREA_PASSWORD=your-password
MIREA_SHOTS=1024
MIREA_TIMEOUT=300

# Python
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Optimization Defaults
DEFAULT_QAOA_LAYERS=2
DEFAULT_MAX_QUBITS=25
DEFAULT_ITERATIONS=1
DEFAULT_BASELINE_LIMIT=100

# Performance
MAX_UPLOAD_SIZE=104857600
PROCESSING_TIMEOUT=1800

# Docker
COMPOSE_PROJECT_NAME=quantum-traffic-optimizer
DOCKER_CPU_LIMIT=4
DOCKER_MEMORY_LIMIT=8G
